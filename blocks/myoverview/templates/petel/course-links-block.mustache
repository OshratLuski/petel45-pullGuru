{{!
    @template block_myoverview/course-action-menu

    This template renders action menu for each course.

    Example context (json):
    {
        "isfavourite": true
    }
}}
        <li class="item_with_icon course-action-menu-btn " aria-labelledby="label-{{uniqid}}">
            <p class="tree_item hasicon m-0" role="listitem"  >
                <a {{#url}}href="{{{url}}}"{{/url}} data-action="{{action}}" tabindex="0"
                    title="{{{title}}}" aria-label="{{{title}}}" id="label-{{uniqid}}">
                    <i class="icon fal fa-{{icon}} fa-fw navicon"></i>
                </a>
            </p>
        </li>



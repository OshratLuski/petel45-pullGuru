{{#has_select_menu}}
    <div class="mb-4 mr-1 d-flex align-items-center block-social-newcourses-inview" id="block-social_newcourses-selectSort">
        <div class="dropdown">
            <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false" aria-label="{{#str}} aria:sortingdropdown, block_myoverview {{/str}}">
                {{#pix}} i/course {{/pix}}
                <span class="d-sm-inline-block">
                    {{#str}} selectperpage, block_social_newcourses {{/str}}
                </span>
            </button>
            <ul class="dropdown-menu">
                {{#perpage}}
                    <li>
                        <a
                            class="dropdown-item {{#active}}active{{/active}}"
                            data-name = "{{name}}"
                            data-handler = "setPerpage"
                            data-value = "{{value}}"
                            href="javascript:void(0);"
                            >
                            {{name}}
                        </a>
                    </li>
                {{/perpage}}
            </ul>
        </div>
        <div class="spinner-border ml-2" role="status" style="border-color:transparent;">
            <span class="sr-only">Loading...</span>
        </div>

    </div>
{{/has_select_menu}}

<input type="hidden" id="block-social_newcourses-page" value="{{page_value}}">

<div class="block-social_newcourses-content-courses">
{{> block_social_newcourses/content-courses}}
</div>

{{#js}}
    var socialnewcoursesflag = false;
    document.addEventListener('loadmyoverview', function (e) {
        if(socialnewcoursesflag === false){
            socialnewcoursesflag = true;
			require(['block_social_newcourses/main'], function(main) {
				main.init();
			});
        }
    }, false);

    setTimeout(function() {
        if(socialnewcoursesflag === false){
            socialnewcoursesflag = true;
			require(['block_social_newcourses/main'], function(main) {
				main.init();
			});
        }
    }, 4000);
{{/js}}

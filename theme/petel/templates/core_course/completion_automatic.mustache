{{!
    @template core_course/completion_automatic

    Template for displaying an automatic completion rule and its status.

    Example context (json):
    {
        "statuscomplete": 1,
        "description": "View",
        "istrackeduser": true,
        "accessibledescription": "Done: View (Set by Admin User)"
    }
}}
{{#istrackeduser}}
    {{#statuscomplete}}
    <span class="completion-bage" role="listitem"
        {{#accessibledescription}} title="{{.}}" aria-label="{{.}}" {{/accessibledescription}}>
        <strong>{{#str}}completion_automatic:done, core_course{{/str}}</strong>
        <span class="font-weight-normal">{{description}}</span>
        <i class="fa-regular fa-circle-check text-success"></i>
    </span>
    {{/statuscomplete}}
    {{#statuscompletefail}}
    <span class="completion-bage" role="listitem"
        {{#accessibledescription}} title="{{.}}" aria-label="{{.}}" {{/accessibledescription}}>
        <strong>{{#str}}completion_automatic:failed, core_course{{/str}}</strong>
        <span class="font-weight-normal">{{description}}</span>
        <i class="fa-regular fa-circle-xmark text-danger"></i>
    </span>
    {{/statuscompletefail}}
    {{#statusincomplete}}
    <span class="completion-bage" role="listitem"
        {{#accessibledescription}} title="{{.}}" aria-label="{{.}}" {{/accessibledescription}}>
        <strong>{{#str}}completion_automatic:todo, core_course{{/str}}</strong>
        <span class="font-weight-normal">{{description}}</span>
        <i class="fa-regular fa-circle text-body"></i>
    </span>
    {{/statusincomplete}}
{{/istrackeduser}}
{{^istrackeduser}}
    <span class="badge badge-pill badge-light" role="listitem">
        <span class="font-weight-normal">{{description}}</span>
    </span>
{{/istrackeduser}}

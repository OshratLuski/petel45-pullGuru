{{!
    @template mod_quiz/summary_table

    Summary attempt data

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        "markscolumn": "true",
        "rows": [{
            "heading": "heading for row",
            "question": "My first question",
            "status": "Answer saved",
            "markscolumn": "95",
            "class": "quizsummary1",
        }]
    }
}}

<div class="container generaltable quizsummaryofattempt boxaligncenter">
    <div class = "row p-2 border-top">
        <div class="col">{{#str}} question, quiz {{/str}}</div>
        <div class="col">{{#str}} status, quiz {{/str}}</div>
        {{#markscolumn}}<div class="col">{{#str}} marks, quiz {{/str}}</div>{{/markscolumn}}
    </div>
    {{#rows}}
        {{#heading}}
            <div class="row p-2 border-top quizsummaryheading">
                <div class="col">{{{ heading }}}</div>
            </div>
        {{/heading}}
        <div class="row p-2 border-top {{ class }}">
            <div class="col" aria-description = "{{ status }}">
                {{{ question }}}
            </div>
            <div class="col" aria-hidden = "true">{{ status }}</div>
            {{#markscolumn}}<div class = "col"> {{{ markscolumn }}} </div> {{/markscolumn}}
        </div>
    {{/rows}}
</div>
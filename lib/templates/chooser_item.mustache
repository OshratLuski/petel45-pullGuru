{{!
    @template core/chooser_item

    Chooser item.

    Example context (json):
    {
        "id": "1",
        "paramname": "param",
        "value": "1",
        "label": "item one",
        "description": "description one"
    }
}}
<div class="option pr-0">
    <label for="item_{{id}}" class="item_{{id}} d-flex align-items-center">
        <input type="radio" name="{{paramname}}" id="item_{{id}}" value="{{value}}">
        <span class="modicon">
            {{#icon}}
                {{>core/pix_icon}}
            {{/icon}}
        </span>
        <span class="typename">{{label}}</span>
        <button type="button" class="btn btn-icon optionaction qfavorites"
                data-name="{{id}}"
                data-value="{{value}}"
            {{^favourite}}
                data-checked="false"
            {{/favourite}}
            {{#favourite}}
                data-checked="true"
            {{/favourite}}
                aria-label="{{#str}} aria:modulefavourite, core_course, {{title}} {{/str}}"
                tabindex="-1"
        >
            {{#favourite}}
                <i class="icon fa fa-star fa-fw p-0" aria-hidden="true"></i>
            {{/favourite}}
            {{^favourite}}
                <i class="icon fa fa-star-o fa-fw p-0" aria-hidden="true"></i>
            {{/favourite}}
        </button>
        <span class="typesummary">
            {{{description}}}
        </span>
    </label>
</div>

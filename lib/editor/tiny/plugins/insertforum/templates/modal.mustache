<div id="insertforum-modal">
    <div>
        <label for="insertforum_forum">{{#str}}pluginname, tiny_insertforum{{/str}}</label>
        <select class="custom-select" id="insertforum_forum">
            {{#forums}}
                <option value="{{id}}">{{text}}</option>
            {{/forums}}
        </select>
    </div>

    <div>
        <label for="insertforum_group">{{#str}}group, tiny_insertforum{{/str}}</label>
        <select class="custom-select" id="insertforum_group">
            {{#groups}}
                <option value="{{id}}">{{name}}</option>
            {{/groups}}
        </select>
    </div>

    <div>
        <label for="insertforum_grouping">{{#str}}grouping, tiny_insertforum{{/str}}</label>
        <select class="custom-select" id="insertforum_grouping">
            {{#groupings}}
                <option value="{{id}}">{{name}}</option>
            {{/groupings}}
        </select>
    </div>

    <div class="d-flex align-items-center">
        <label for="insertforum_posts">{{#str}}posts, tiny_insertforum{{/str}}</label>
        <input class="form-control w-25" type="number" id="insertforum_posts" />
    </div>

    <button id="insertforum_submit" class="ml-auto mr-auto btn btn-primary">{{#str}}submit, tiny_insertforum{{/str}}</button>
</div>

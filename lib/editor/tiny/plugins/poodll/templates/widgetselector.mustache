{{< core/modal }}
{{$title}}{{#str}} widgetsselector, tiny_poodll {{/str}}{{/title}}
    {{$body}}
<div id="tiny_poodll_widgets_selectorpanel" class="tiny_poodll_widgets_selectorpanel">
    <form class="tiny_poodll_form" id="{{uniqid}}_tiny_poodll_form">
        <div class="root tab-content">
          <div>{{#str}} widgetsselector_instructions, tiny_poodll {{/str}}</div>
            <div class="tiny_poodll_widget_buttons-wrapper">
                {{#widgets}}
                <div id="{{uniqid}}" class="tiny_poodll_widget_buttons mdl-align">
                <button style="width: 100%;" data-templateindex="{{templateindex}}" class="tiny_poodll_widgetchoosebutton btn d-block">{{name}}</button>
                </div>
                {{/widgets}}
            </div>
        </div>
    </form>
</div>
<div id="tiny_poodll_widgets_optionspanel" class="tiny_poodll_widgets_optionspanel tiny_poodll_hidden">
</div>
    {{/body}}
    {{$footer}}
        <button type="button" class="btn btn-secondary" data-action="cancel">{{#str}} cancel {{/str}}</button>
    {{/footer}}
{{/ core/modal }}
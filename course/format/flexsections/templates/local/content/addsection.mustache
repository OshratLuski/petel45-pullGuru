{{!
    @template format_flexsections/local/content/addsection

    Link to inesert a section

    Example context (json):
    {
    }
}}
{{#showaddsection}}
<div class="mdl-left pt-3 pb-2 changenumsections d-flex">
    {{#addsections}}
    <a
        href="{{{url}}}"
        class="add-sections p-3"
        data-add-sections="{{title}}"
        data-new-sections="{{newsection}}"
        data-action="addSection"
        {{#insertafter}} data-id="{{id}}" {{/insertafter}}
    >
        <i class="fa-regular fa-plus mr-2"></i>
        {{title}}
    </a>
    {{/addsections}}
</div>
{{/showaddsection}}

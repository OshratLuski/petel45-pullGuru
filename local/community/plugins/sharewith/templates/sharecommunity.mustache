{{!
    @template community_sharewith/select_teacher

    Example context (json):
    {
        "activityid": "11",
        "activityname": "Quiz 1",
        "courseid": "2",
        "config": "",
        "teachers": [
            {
                "teacher_name": "Adam Smith",
                "teacher_url": "",
                "date": "01.01.1970",
                "time": "23:59"
            }
        ]
    }
}}
<div class="modal-header bg-secondary p-1 text-white">
    <h5 class="modal-title">{{#str}}selectcommunity, community_sharewith{{/str}}</h5>
    <button type="button" data-ref="close" class="close text-white d-flex align-items-center justify-content-center m-0" data-dismiss="modal" aria-label="Close" id="yui_3_17_2_1_1569598769750_3060">
        <i class="fa-light fa-circle-xmark"></i>
    </button>
</div>

<div class = "p-3">

    <div class = "mb-4">
        {{#courses_enable}}
            <div class = "form-group d-flex flex-column position-relative">
                <label for="selectteacher" class="mb-0 alert-secondary border rounded-top p-1">{{#str}}communityselection, community_sharewith{{/str}}</label>

                <select id="teachers_courses" class = "form-control mb-0 border-top-0 w-100 smartselect2">
                    <option></option>
                    {{#courses}}
                        <option value="{{id}}">{{name}}</option>
                    {{/courses}}
                </select>
            </div>

            <div class = "form-group">
                <textarea id="message_for_teacher" class = "form-control" placeholder="{{#str}}comment_to_teacher, community_sharewith{{/str}}"></textarea>
            </div>
        {{/courses_enable}}

        {{^courses_enable}}
            {{#str}}no_courses_for_send, community_sharewith{{/str}}
        {{/courses_enable}}

    </div>

    <div id="error_share_to_community" class="alert alert-danger" style="display:none;" role="alert">
        {{#str}}error_share_to_community, community_sharewith{{/str}}
    </div>

</div>

<div class="modal-footer">
  <button class="btn btn-secondary" type="button" data-handler = "goBack">{{#str}}back, community_sharewith{{/str}}</button>

  {{#courses_enable}}
      <button
          class = "btn btn-success"
          data-handler = "sendToTeachersCommunity"
          type = "button"
          >
          <div id ="modalspinner" class="spinner-border spinner-border-sm d-none" role="status">
    <!--          <span class = "sr-only">loading...</span>-->
          </div>
    <!--      <span class = "spinner-loading">{{#str}}loading, community_sharewith{{/str}}</span>-->
            <span>{{#str}}share, community_sharewith{{/str}}</span>
        </button>
    {{/courses_enable}}
</div>

{{#js}}
    require(['jquery', 'core/str'], function ($, Str) {
        Str.get_strings([
            {key: 'enter_course_here', component: 'community_sharewith'},
        ]).done(function (strings) {

            $(".smartselect2").select2({
                dropdownAutoWidth: true,
                placeholder: "   " + strings[0] + "   ",
            });

            // Event on select.
            $('.smartselect2').on('select2:select', function (e) {
            });
        })
    })
{{/js}}
<div class="modal-header">
    <h5 class="modal-title">{{#str}}give_feedback, community_oer {{/str}} {{activityName}}</h5>
    <button id="confirmClose" type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">Ã—</span>
    </button>
</div>

<div class="modal-body review-v2-modal-body review-unit p-3">
    {{! Modal body }}
    <p class="mb-3">
        {{reviewsheadertext1}}<br>
        {{{reviewsheadertext2}}}
    </p>
    <form id="shortReviewForm" class="">
        <label class="mb-2">{{reviewsquestiontext}}</label>
        <div class="form-check">
            <label class="form-check-label" for="shortReviewFormRadios1">
                <input class="form-check-input" type="radio" name="shortReviewFormRadios"
                       id="shortReviewFormRadios1" value="11" checked_>{{#str}}yes{{/str}}</label>
        </div>
        <div class="form-check mb-3">
            <label class="form-check-label" for="shortReviewFormRadios2">
                <input class="form-check-input" type="radio" name="shortReviewFormRadios"
                       id="shortReviewFormRadios2" value="10">{{#str}}no{{/str}}</label>
        </div>
        <div class="form-group">
            <label for="exampleFormControlTextarea1">{{reviewstextarea}}</label>
            <textarea class="form-control description_text short-review-form-description"
                      id="shortReviewFormDescription" rows="5"></textarea>
        </div>

        <div class="review_description_error alert alert-danger" style="display: none;" role="alert">
            {{# str }} review_description_error, community_oer {{/ str }}
        </div>

    </form>
    {{! Modal footer }}
    <div class="modal-footer" style="min-height: 69px;">

        <button data-handler="reportBug" data-activityid="{{activityId}}" data-requestid="{{requestId}}"
            type="button" class="btn error-msg-btn btn-outline-danger btn-sm align-self-baseline mr-auto">
            {{#str}}report_bug_btn, community_oer {{/str}}
        </button>
        <button data-activityid="{{activityId}}" data-requestid="{{requestId}}" data-activityname="{{activityName}}"
                data-handler="confirmRejectReview" type="button" class="btn btn-secondary btn-sm align-self-baseline">
            {{#str}}dont_wont_comment_activity_popup, community_oer {{/str}}
        </button>
        <button data-handler="sendShortReview" data-activityid="{{activityId}}" data-requestid="{{requestId}}"
            data-activityimg="{{activityImg}}" data-activityname="{{activityName}}" data-activityurl="{{activityUrl}}"
            data-objid="{{activityId}}" data-objtype="activity"
            type="button" class="btn btn-secondary btn-sm align-self-baseline">
            {{#str}}to_write_comment, community_oer {{/str}}
        </button>
    </div>
</div>

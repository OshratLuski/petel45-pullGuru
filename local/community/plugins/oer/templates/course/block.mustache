{{#blocks}}

    <div class="bg-white w-100 border border-light d-flex position-relative activity-item mx-3">
        <div class="activity-img-wrapper overflow-hidden position-relative">
            <a class="activity-img copy-course-img d-block border border-primary position-relative" href="{{{urlcourse}}}" title="{{metadata_cfullname}}" style="background-image: url('{{{imagecourse}}}');">

                <div class="certificate_stamp-wrapper d-flex align-items-center justify-content-center position-absolute">

                </div>
            </a>
        </div>

        <div class="activity-main">
            <div class="teacher-block d-flex align-items-center flex-wrap mb-3">

                {{#users}}
                    <a href="{{{urltosocialprofile}}}" {{#urltosocialtarget}} target="_blank" {{/urltosocialtarget}}>
                        <div class="teacher-img rounded-circle ml-1" style="background-image: url('{{{user_image}}}');" role="presentation"></div>
                    </a>

                    <a href="{{{urltosocialprofile}}}" {{#urltosocialtarget}} target="_blank" {{/urltosocialtarget}}>
                        <span class="teacher-info text-body border-right border-primary">{{user_fname}} {{user_lname}}</span>
                    </a>
                {{/users}}

                <span class="teacher-info text-body border-right border-primary">{{c_shared_at_format}}</span>

                <div class="text-primary course-info-tooltip position-relative mr-3" >
                    <span class="teacher-info text-body "> <i class="fas fa-list"></i> {{count_sections}} {{#str}} section_on_course, community_oer {{/str}}</span>
                    <div class="oer-tooltip p-2 position-absolute" data-position="bottom-center" data-carret-position="top-center" data-simplebar>
                        <ul class="p-0">
                            {{#sections}}
                                <li>{{.}}</li>
                            {{/sections}}
                        </ul>
                    </div>
                </div>

            </div>
            <a href="{{{urlcourse}}}" class="activity-title bold text-body d-flex justify-content-start">
                <h2 class="font-weight-bold mb-0 mr-2">{{{metadata_cfullname}}}</h2>
<!--                <span class="font-weight-normal activity-title-info">{{info_metadata}}</span>-->
            </a>
            <p class="activity-text text-body mb-0">{{{metadata_cdescription}}}</p>

            {{#social_collegues_enable}}
                <div class="text-primary course-info-tooltip position-relative d-inline-flex" >
                            <span class="teacher-info text-body p-0 ">
                                <i class="fas fa-users" aria-hidden="true"></i>
                                {{#str}} listofusers, community_social {{/str}}
                            </span>
                    <div class="oer-tooltip position-absolute p-1 {{^collegues}}d-none{{/collegues}}" data-position="bottom-center"
                         data-carret-position="top-center" data-simplebar>
                        {{#collegues}}
                            {{firstname}} {{lastname}},
                        {{/collegues}}
                    </div>
                </div>
            {{/social_collegues_enable}}

        </div>
        <div class="activity-info ml-auto flex-shrink-0">
            <div class="copy-link-wrapper w-100 position-relative mb-2">
                <div class="copy-link w-100 ml-auto d-flex align-items-center justify-content-end"
                     data-linkrel="{{{courselink}}}" data-toggle="dropdown" role="button" tabindex="0">
                    <i class="fa-light fa-link mr-2"></i>
                    <u>{{#str}}copycourseadress, community_oer{{/str}}</u>
                </div>
                <div class="dropdown-menu dropdown-menu-right p-3 w-100" aria-labelledby="dropdownMenuLink">
                    <p>
                        {{#str}}linkcopiedtoclipboard, community_oer{{/str}}
                    </p>
                    <input class="w-100" type="text" value="" readonly="readonly">
                </div>
            </div>

            <div id="oer_btn_container" class="d-flex ">
                {{^showteachercomments}}
                    <a class="comments reviews mr-2" href="javascript:void(0)" data-objid="{{cid}}" data-type="course" data-handler="showReview">
                        <div class="activity-info-tooltip position-relative">
                            <button type="button" class="btn btn-primary rounded mb-3">
                                <i class="fal fa-comment" aria-hidden="true"></i>
                            </button>
                            <div class="oer-tooltip p-2 position-absolute" data-position="bottom-left" data-carret-position="top-left" >
                                <span>{{countreview}} {{#str}}comments_box, community_oer{{/str}}</span>
                            </div>
                        </div>
                    </a>
                {{/showteachercomments}}

                {{#course_shared_disabled}}
                    <div class="copy-activity-dropdown-wrapper">
                        <div class="text-primary copy-course-info-tooltip position-relative" >

                            <button class="copy-course-btn btn btn--white rounded mb-3 w-100" disabled
                                    type="button" id="copy_corse_btn_{{cid}}" data-cid="{{cid}}" data-error-category="{{error_category}}">

                                    <i class="fa-light fa-copy mr-2"></i> <span> {{#str}}activitycopy, community_oer{{/str}} </span>
                            </button>

                            <div class="oer-tooltip p-2 position-absolute" data-position="bottom-left" data-carret-position="top-left" >
                                <span>{{#str}}course_shared_disabled, community_oer{{/str}}</span>
                            </div>

                        </div>
                    </div>
                {{/course_shared_disabled}}

                {{^course_shared_disabled}}
                    <div class="copy-activity-dropdown-wrapper">
                        <button class="copy-course-btn btn
                            {{#course_shared}}btn--white{{/course_shared}} {{^course_shared}}btn-primary{{/course_shared}}
                            rounded mb-3 w-100"
                                type="button" id="copy_corse_btn_{{cid}}" data-cid="{{cid}}" data-error-category="{{error_category}}">

                                <i class="fa-light fa-copy mr-2"></i>
                            <span>
                                {{#course_shared}}{{#str}}activitycopied, community_oer{{/str}}{{/course_shared}}
                                {{^course_shared}}{{#str}}activitycopy, community_oer{{/str}}{{/course_shared}}
                            </span>

                        </button>
                    </div>
                {{/course_shared_disabled}}
            </div>

            <div class="activity-info-blocks d-flex align-items-start justify-content-end ml-4">
                <div class="activity-info-block">
                    <div class="text-primary">
                        <i class="fa-light fa-screen-users"></i>
                    </div>
                    <p class="text-body m-0">{{count_used_course}}</p>
                </div>

                <div class="activity-info-block">
                    {{#metadata_csource}}
                        <div class="text-primary course-info-tooltip position-relative mr-3" >
                            <i class="fa-light fa-book"></i>
                                <div class="oer-tooltip p-2 position-absolute" data-position="bottom-left" data-carret-position="top-left" >
                                <span>{{{metadata_csource}}}</span>
                            </div>
                        </div>
                    {{/metadata_csource}}
                </div>

            </div>
        </div>
    </div>

{{/blocks}}

{{#enable_pagination}}
    {{> community_oer/pagination }}
{{/enable_pagination}}

{{#js}}
require(['jquery', 'community_oer/course'], function ($, Course) {

    $('.copy-link').on('click', function(e){
        const target = $(e.currentTarget);
        const dropdownMenu = target.siblings('.dropdown-menu');
        const url = target.data('linkrel');
        let temp = $("<input>");
        $("body").append(temp);
        temp.val(url).select();
        document.execCommand("copy");
        temp.remove();
        dropdownMenu.find('input').val(url);
    })

    Course.downloadCourse();
});
{{/js}}
<div class="question-item-wrapper border border-light mb-2">
    <div class="question-item d-flex position-relative p-2">
        <div class="custom-control checkbox-cell custom-checkbox question-custom-checkbox px-2 d-flex align-items-center justify-content-center border-right border-secondary">
            <input type="checkbox" class="custom-control-input checkbox-select-question"
                   id="checkbox_{{uniqueid}}_{{qid}}" data-qid="{{qid}}">
            <label class="custom-control-label " for="checkbox_{{uniqueid}}_{{qid}}"></label>
        </div>

        <div class="type-cell px-3 flex-grow-0 d-flex justify-content-start align-items-center border-right border-secondary">
            {{{qtypeimage}}}
            {{qtype_name}}
        </div>

        <div class="name-cell px-3 flex-grow-1 d-flex justify-content-start align-items-center border-secondary">
            <i class="fas fa-info-circle mr-1"></i>
            {{{qname_text}}}
        </div>

        <div class="create-cell px-3 flex-grow-0 d-flex justify-content-center align-items-center border-right border-left border-secondary">
            {{createdby}}
        </div>

        <div class="create-date-cell px-3 flex-grow-0 d-flex justify-content-center align-items-center border-right border-secondary">
            {{timecreated_format}}
        </div>

        <div class="update-date-cell px-3 flex-grow-0 d-flex justify-content-center align-items-center border-right border-secondary">
            {{timemodified_format}}
        </div>

        <div class="flex-grow-0 last-cell d-flex justify-content-center align-items-center">
            <button role="button" class="collapse-question-btn d-flex border-0 bg-transparent collapsed"
                    data-toggle="collapse" data-target="#question_collapse_{{uniqueid}}_{{qid}}"
                    aria-expanded="false" aria-controls="question_collapse_{{uniqueid}}_{{qid}}">
                <i class="fa fa-caret-up text-primary mx-2" aria-hidden="true"></i>
            </button>
        </div>
    </div>

    <div class="question-collapse collapse multi-collapse px-0 py-3 position-relative" id="question_collapse_{{uniqueid}}_{{qid}}" data-qid="{{qid}}">

        <div class="question-collapse-inner"></div>
        <div class="d-flex justify-content-end"></div>

    </div>

</div>


{{#js}}
    require(['community_sharequestion/copyFromMyCourses', 'jquery'], function(copyFromMyCourses, $) {
        copyFromMyCourses.actionsQuestions();
    });
{{/js}}
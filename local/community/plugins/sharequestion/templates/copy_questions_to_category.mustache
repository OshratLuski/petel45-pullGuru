<p class="mb-2">{{#str}}selectcourse, community_sharequestion{{/str}}</p>
<div class="select-wrapper">
    <select class="form-control mb-4 select-course">
        {{#courses}}
            <option value="{{id}}" {{#selected}}selected{{/selected}}>{{fullname}}</option>
        {{/courses}}
    </select>
</div>

<p class="mt-3 mb-2">{{#str}}selectcategory, community_sharequestion{{/str}}</p>
<div class="select-wrapper">
    <select class="sections form-control select-category">
        {{#categories}}
            <option value="{{id}}">{{name}}</option>
        {{/categories}}
    </select>
</div>

<div style="font-size: 16px;" class="invalid-feedback select-category-error">
    {{#str}}selectquizerror, community_sharequestion{{/str}}
</div>

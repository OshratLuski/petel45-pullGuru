<p class="mb-2">{{#str}}selectcourse, community_sharequestion{{/str}}</p>
<div class="select-wrapper">
    <select class="form-control mb-4 select-course">
        {{#courses}}
            <option value="{{courseid}}" {{#selected}}selected{{/selected}}>{{fullname}}</option>
        {{/courses}}
    </select>
</div>

<p class="mt-3 mb-2">{{#str}}selectquiz, community_sharequestion{{/str}}</p>
<div class="select-wrapper">
    <select class="sections form-control select-quiz">
        {{#activities}}
            <option value="{{cmid}}">{{name}}</option>
        {{/activities}}
    </select>
</div>

<div style="font-size: 16px;" class="invalid-feedback select-quiz-error">
    {{#str}}selectquizerror, community_sharequestion{{/str}}
</div>
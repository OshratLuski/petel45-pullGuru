    require(['jquery', 'message_petel/close_popup_notification'], function($, Close) {
        Close.init(function(messageid) {
            $('.petel-notification').each(function() {
                var num = $( this ).attr('data-id');
                if(num == messageid){
                    $( this ).hide();
                }
            });
        });
    });

    require(['jquery', 'message_petel/handlers'], function($, Handler) {
        Handler.init(function(messageid){
            $('.petel-notification').each(function() {
                var num = $( this ).attr('data-id');
                if(num == messageid){
                    $( this ).hide();
                }
            });
        });
    });

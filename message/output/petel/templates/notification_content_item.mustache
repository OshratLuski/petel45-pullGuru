         data-region="notification-content-item-container"
         data-id="{{id}}"
         role="listitem">

        <div tabindex="0" class="d-flex align-items-center justify-content-between px-3 py-2 text-white bg-primary"
            {{#read}}aria-label="{{subject}}"{{/read}}
            {{^read}}aria-label="{{#str}} unreadnotification, message, {{subject}} {{/str}}"{{/read}}>
            <img src="{{{iconurl}}}" alt="{{#str}}notificationimage, message{{/str}}" style="width: 1rem; height: 1rem;" />
            {{#str}} unreadnotification, message {{/str}}
            <a type="button" class="close btn p-0 text-white" aria-label="Close" rel="{{id}}">
                <span class="h3 mb-0" aria-hidden="true">&times;</span>
            </a>

        </div>

        <div class="px-3 py-2 text-primary">
            <div class="card-content border rounded p-2 pb-3 mb-3 text-align-justify">
                <div class="mb-1 text-muted">{{timecreatedpretty}}</div>
                {{#contexturl}}

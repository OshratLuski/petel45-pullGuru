{{#social_request}}
    <div class="card petel-notification mb-3 border border-primary rounded" data-id="{{id}}">
        <div class="d-flex align-items-center justify-content-between px-3 py-2 text-white bg-primary">
            <h6 class="h5 mb-0" role="heading" tabindex="0">{{#str}}correspondence, message_petel{{/str}}</h6>
            <a type="button" class="close btn p-0 text-white" aria-label="Close" rel="{{id}}">
                <span class="h3 mb-0" aria-hidden="true">&times;</span>
            </a>
        </div>
        <div class="px-3 py-2 text-primary">
            <div class="card-author d-flex align-items-center mb-2">
                <div class="border border-primary rounded-circle mr-2 d-flex justify-content-center avatar">
                    <img src="{{{teacher_image}}}" alt="{{#str}}notificationimage, message{{/str}}" />
                </div>
                <a href="#" class="text-justify h5 mb-0 font-weight-normal">
                    {{firstname}} {{lastname}}
                </a>
            </div>
            <div class="card-content border rounded p-2 pb-3 mb-3 text-align-justify">
                <div class="mb-1 text-muted">{{dateformat}} | {{timeformat}}</div>
                <div class="mb-1 text-align-justify">
                    {{#str}}requestbecollegue, community_social{{/str}} {{coursename}}
                </div>
                <div class="mb-1">
                    <a target="_blank" href="{{{courseurl}}}" class="text-muted">{{{courseurl}}}</a>
                </div>
            </div>
            <div class="card-buttons d-flex align-items-center justify-content-between">
                <a data-handler = "approve_social_message" data-message_id="{{id}}" href="javascript:void(0);" class="btn btn-primary pull-left">
                    <i class="icon fa fa-archive"></i>
                    {{#str}}requestapprove, community_social{{/str}}
                </a>
                <a data-handler = "decline_social_message" data-message_id="{{id}}" href="javascript:void(0);" class="btn btn-danger pull-right">
                    <i class="icon fa fa-arrow-left"></i>
                    {{#str}}requestdecline, community_social{{/str}}
                </a>
            </div>
        </div>
    </div>
{{/social_request}}

